<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">


    <EditText
        android:id="@+id/etEmailAddress"
        android:layout_width="298dp"
        android:layout_height="58dp"
        android:layout_marginTop="213dp"
        android:paddingHorizontal="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/container_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />
    <EditText
        android:id="@+id/etTextPassword"
        android:layout_width="298dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        android:paddingHorizontal="10dp"
        android:hint="ContraseÃ±a"
        android:background="@drawable/container_login"
        android:autofillHints="password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmailAddress"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegister"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black_light"
        android:text="Registrar"
        app:layout_constraintStart_toStartOf="@id/etEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/etTextPassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/blue_light"
        android:text="Acceder"
        app:layout_constraintStart_toEndOf="@id/buttonRegister"
        app:layout_constraintTop_toBottomOf="@id/etTextPassword" />

    <ImageView
        android:id="@+id/tvTheBestMoment"
        android:layout_width="304dp"
        android:layout_height="114dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/thebestmoment1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/ivPassword"
        android:layout_width="72dp"
        android:layout_height="13dp"
        android:layout_marginTop="308dp"
        android:src="@drawable/password1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/ivEmail"
        android:layout_width="46dp"
        android:layout_height="19dp"
        android:layout_marginTop="192dp"
        android:src="@drawable/email1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="225dp"
        android:layout_height="176dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintVertical_bias="1.0"
        android:src="@drawable/png_transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>